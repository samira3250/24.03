#include <stdio.h>

int main() {
  // 1. Объявление переменных
  int n;            // Целое число, введенное пользователем.
  int isPowerOfTwo; // Результат: 1 (если степень двойки), 0 (если нет).

  // 2. Запрос ввода данных у пользователя
  printf("Введите целое число: ");
  scanf("%d", &n);

  // 3. Проверка, является ли число степенью двойки
  if (n > 0) {
    if ((n & (n - 1)) == 0) {
      isPowerOfTwo = 1; // Если n > 0 и n & (n - 1) равно 0, то n - степень двойки.
    } else {
      isPowerOfTwo = 0; // Иначе, n не является степенью двойки.
    }
  } else {
    isPowerOfTwo = 0; // Если n <= 0, то n не является степенью двойки.
  }

  // 4. Вывод результата
  printf("%d\n", isPowerOfTwo);
  return 0;
}
