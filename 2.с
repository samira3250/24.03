#include <stdio.h>

int main() {
  int number; 

  printf("Введите целое число: ");
  scanf("%d", &number); 

  int isEven = !(number % 2); 
  // Вычисляем остаток от деления числа на 2.
  // Если число четное, остаток будет 0.
  // Оператор '!' (логическое НЕ) инвертирует результат.
  // Если остаток 0 (четное число), 'isEven' станет 1 (истина).
  // Если остаток не 0 (нечетное число), 'isEven' станет 0 (ложь).
  // Блок вывода результата
  {
    printf("%d\n", isEven); 
    return 0; 
  }
}



