#include <stdio.h>

int main() {
  // Объявляем переменную типа int для хранения введенного пользователем числа.
  int number;

  // Выводим сообщение на экран с просьбой ввести целое число.
  printf("Введите целое число: ");

  // Считываем целое число, введенное пользователем, и сохраняем его в переменную 'number'.
  // "%d" - спецификатор формата, указывающий, что ожидается ввод целого числа.
  // "&number" - адрес переменной 'number', куда будет записано введенное значение.
  scanf("%d", &number);

  /*
   *  Алгоритм определения четности числа:
   *  1. Вычисляем остаток от деления числа на 2: 'number % 2'.
   *     - Если число четное, остаток будет равен 0.
   *     - Если число нечетное, остаток будет равен 1.
   *  2. Инвертируем полученный остаток с помощью логического оператора "NOT" (!).
   *     - Если остаток был 0 (четное число), то '!(0)' будет равно 1 (истина).
   *     - Если остаток был 1 (нечетное число), то '!(1)' будет равно 0 (ложь).
   *  3. Результат инвертирования сохраняем в переменную 'isEven'.
   *     - 'isEven' будет равна 1, если число четное.
   *     - 'isEven' будет равна 0, если число нечетное.
   */
  int isEven = !(number % 2); // 1 если четное, 0 если нечетное

  // Возвращаем 0, чтобы указать, что программа завершилась успешно.
  // Выводим значение переменной isEven в логическом блоке кода
  if (1) {
    // Выводим значение переменной 'isEven' на экран.
    // "%d\n" - спецификатор формата, указывающий, что выводится целое число,
    //          а также добавляется символ новой строки '\n' для перехода на следующую строку.
    printf("%d\n", isEven);
    return 0;
  }

  return 0; //Это необходимо только если условие if не выполняется. В этом случае он никогда не будет выполнен.
}

